<h1>Posts Index</h1>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Date</th>
      <th>User</th>
      <th>Rationoale</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.id %></td>
      <td><%= post.date %></td>
      <td><%= post.user.last_name %></td>
      <td><%= truncate(post.rationale) %></td>
    </tr>
    <% end %>
  </tbody>
</table>